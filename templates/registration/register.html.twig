{% extends 'base.html.twig' %}

{% block title %}RUN - S'enregistrer
{% endblock %}

{% block body %}
{% for flash_error in app.flashes('verify_email_error') %}
	<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
{% endfor %}

<div class="img-background-creation">
	<section class="col-8 col-md-6 mx-auto border-lg rounded-4 px-5 pb-5 form-opacity">
		<header class="container text-white text-shadow text-center my-5">
			<h1>Créer son compte</h1>
			<a href="{{ path('app_login') }}" class="btn-connexion-register montserrat" type="submit">
				J'ai déjà un compte
			</a>
		</header>

		<main>
			{{ form_start(registrationForm, {'attr': {'class' : 'fs-5 text-shadow text-white fw-bolder'} }) }}
			{{ form_row(registrationForm.username, {class : 'text-white', label : 'Nom d\'utilisateur'})}}
				{{ form_row(registrationForm.prenom, {class : 'text-white', label : 'Prénom'})}}
				{{ form_row(registrationForm.nom, {label: 'Nom'}) }}
				{{ form_row(registrationForm.mail, {label: 'Adresse mail'}) }}
				{{ form_row(registrationForm.plainPassword, {label: 'Mot de passe'}) }}
				<button type="submit" class="btn-connexion-register montserrat fs-6">Créer son compte</button>
				{{ form_end(registrationForm) }}
			</main>
		</section>
	</div>

{% endblock %}
