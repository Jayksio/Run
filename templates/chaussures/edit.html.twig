{% extends 'base.html.twig' %}

{% block title %}RUN - Modification
	{{ chaussure.nom }}
{% endblock %}

{% block body %}
	{% if is_granted('ROLE_ADMIN') %}
		<header class="w-50 mx-auto text-center">
			<h1>
				Modifier la paire de chaussure
				<strong class="text-bleu-fonce">{{ chaussure.nom }}</strong>
			</h1>
		</header>

		<main class="w-50 mx-auto">

			<div class="my-3">
				{{ include('chaussures/_form.html.twig', {'button_label': 'Update'}) }}
			</div>

			<div class="my-3">
				{{ include('chaussures/_delete_form.html.twig') }}
			</div>
			<a class="btn btn-light" href="{{ path('app_chaussures_index') }}">Revenir aux chaussures</a>
		</main>
	{% else %}
		<div class="alert alert-danger w-50 mx-auto text-center my-3">
			<p class="fs-1">Il semblerait que vous vous soyez perdu...</p>
			<a class="btn btn-dark my-3 fs-3" href="{{ path('app_home') }}">Retourner Ã  l'accueil</a>
		</div>
	{% endif %}
{% endblock %}
